<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_materi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical"
    tools:context="com.skirpsi.sirkulasiproject.MenuMateri"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_weight="0.29">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="153dp"
            app:srcCompat="@drawable/emblem0"
            android:id="@+id/imageView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/secondtombol4"
            android:id="@+id/imageButton4"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/secondtombol5"
            android:id="@+id/imageButton"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:weightSum="1">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/secondtombol6"
            android:id="@+id/imageButton2"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/secondtombol7"
            android:id="@+id/imageButton3"
            android:background="@android:color/transparent" />

    </LinearLayout>

</LinearLayout>
