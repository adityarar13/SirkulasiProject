    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_quiz_s"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutgame3"
    android:orientation="vertical"
    tools:context=".MenuQuizS">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:layout_gravity="center"
            android:id="@+id/darahku"
            android:background="@android:color/transparent"
            android:src="@drawable/secondtombol1" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:id="@+id/trufals"
            android:background="@android:color/transparent"
            android:src="@drawable/secondtombol0"/>

    </LinearLayout>

</RelativeLayout>